<!--
    Basic example of a text-only, digital watch face, demonstrating:
    
    - Use of TimeText for digital watch faces
    - Showing different styling in ambient mode, via the Variant element
    - Localization using Android string resources
-->
<WatchFace width="450" height="450">
  <Metadata key="CLOCK_TYPE" value="DIGITAL"/>
  <Metadata key="PREVIEW_TIME" value="10:08:32"/>
  <Scene backgroundColor="#ff000000">
    <DigitalClock x="0" y="0" width="450" height="450">
      <!-- For further attributes see:
          https://developer.android.com/training/wearables/wff/clock/time-text -->
      <!-- SYNC_TO_DEVICE specifies to respect the device 12/24h setting -->
      <!-- Ambient mode version -->
      <TimeText format="hh:mm" hourFormat="SYNC_TO_DEVICE" align="CENTER" x="0" y="129" width="450" height="100" alpha="0">
        <Variant mode="AMBIENT" target="alpha" value="255"/>
        <Font family="@font/imagine_font" size="102" weight="THIN" slant="NORMAL" color="#ffffff"/>
      </TimeText>
    </DigitalClock>
    
    <!-- AM/PM indicator at top left -->
    <PartText x="115" y="91" width="78" height="50" alpha="255">
      <Variant mode="AMBIENT" target="alpha" value="0"/>
      <Text align="LEFT">
        <Font family="@font/imagine_font" size="45" color="#f5df1d">
          <Template>%s<Parameter expression="[HOUR_0_23] &lt; 12 ? AM : PM"/></Template>
        </Font>
      </Text>
      <Variant mode="AMBIENT" target="alpha" value="0"/>
      <Variant expression="[IS_24_HOUR_MODE]" target="alpha" value="0"/>
    </PartText>
    
    <!-- Seconds counter at top right -->
    <PartText x="270" y="91" width="68" height="50" alpha="255">
      <Variant mode="AMBIENT" target="alpha" value="0"/>
      <Text align="RIGHT">
        <Font family="@font/imagine_font" size="45" color="#ffffff">
          <Template>%02d<Parameter expression="[SECOND]"/></Template>
        </Font>
      </Text>
    </PartText>

    <!-- Individual digits for beam animation - using live digit formats -->
    <!-- Hour tens digit with beam animation -->
    <PartText x="33" y="129" width="90" height="100" alpha="255">
      <Transform target="alpha" value="((([HOUR_0_23] == 9) || ([HOUR_0_23] == 19) || ([HOUR_0_23] == 23)) &amp;&amp; ([MINUTE] == 59)) &amp;&amp; ([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="102" color="#f5df1d">
          <Template>%s<Parameter expression="floor(([IS_24_HOUR_MODE]?[HOUR_0_23]:[HOUR_1_12])/10)"/></Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Hour ones digit with beam animation -->
    <PartText x="120" y="129" width="90" height="100" alpha="255">
      <Transform target="alpha" value="([MINUTE] == 59) &amp;&amp; ([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="102" color="#f5df1d">
          <Template>%s<Parameter expression="([IS_24_HOUR_MODE]?[HOUR_0_23]:[HOUR_1_12]) % 10"/></Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Colon separator -->
    <PartText x="207" y="129" width="30" height="100">
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="102" color="#f5df1d">
          <Template>:</Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Minute tens digit with beam animation -->
    <PartText x="237" y="129" width="90" height="100" alpha="255">
      <Transform target="alpha" value="(([MINUTE] % 10) == 9) &amp;&amp; ([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="102" color="#f5df1d">
          <Template>%s<Parameter expression="floor([MINUTE] / 10)"/></Template>
        </Font>
      </Text>
    </PartText>
    
    <!-- Minute ones digit with beam animation -->
    <PartText x="325" y="129" width="90" height="100" alpha="255">
      <Transform target="alpha" value="([SECOND] == 59) &amp;&amp; ([MILLISECOND] &gt;= 650) &amp;&amp; ([MILLISECOND] &lt; 1000) ? 0 : 255"/>
      <Text align="CENTER">
        <Font family="@font/imagine_font" size="102" color="#f5df1d">
          <Template>%s<Parameter expression="[MINUTE] % 10"/></Template>
        </Font>
      </Text>
    </PartText>

    <!-- Beam animations - triggered by digit changes -->
    <!-- Hour tens beam - only animates when hour tens will change -->
    <Group x="34" y="0" width="73" height="209" name="hour_tens_beam">
      <PartDraw x="0" y="0" width="73" height="209">
        <Rectangle x="0" y="0" width="73">
          <Fill color="#f5df1d"/>
          <!-- Hour tens changes: 09:59:59->10:00, 19:59:59->20:00, 23:59:59->00:00 - Four phase animation -->
          <Transform target="height" value="((([HOUR_0_23] == 9) || ([HOUR_0_23] == 19) || ([HOUR_0_23] == 23)) &amp;&amp; ([MINUTE] == 59) &amp;&amp; ([SECOND] == 59)) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 209) : ([MILLISECOND] &lt; 825) ? (209 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 209) : 209) : ((([HOUR_0_23] == 10) || ([HOUR_0_23] == 20) || ([HOUR_0_23] == 0)) &amp;&amp; ([MINUTE] == 0) &amp;&amp; ([SECOND] == 0) &amp;&amp; ([MILLISECOND] &lt; 175)) ? (209 * (1 - ([MILLISECOND] / 175.0))) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Hour ones beam - animates when hour ones will change -->
    <Group x="121" y="0" width="73" height="209" name="hour_ones_beam">
      <PartDraw x="0" y="0" width="73" height="209">
        <Rectangle x="0" y="0" width="73">
          <Fill color="#f5df1d"/>
          <!-- Hour ones changes every hour at XX:59:59 - Four phase animation -->
          <Transform target="height" value="([MINUTE] == 59) &amp;&amp; ([SECOND] == 59) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 209) : ([MILLISECOND] &lt; 825) ? (209 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 209) : 209) : ([MINUTE] == 0) &amp;&amp; ([SECOND] == 0) &amp;&amp; ([MILLISECOND] &lt; 175) ? (209 * (1 - ([MILLISECOND] / 175.0))) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Minute tens beam - animates when minute tens will change -->
    <Group x="238" y="0" width="73" height="209" name="minute_tens_beam">
      <PartDraw x="0" y="0" width="73" height="209">
        <Rectangle x="0" y="0" width="73">
          <Fill color="#f5df1d"/>
          <!-- Minute tens changes at X9:59 minutes - Four phase animation -->
          <Transform target="height" value="(([MINUTE] % 10) == 9) &amp;&amp; ([SECOND] == 59) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 209) : ([MILLISECOND] &lt; 825) ? (209 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 209) : 209) : (([MINUTE] % 10) == 0) &amp;&amp; ([SECOND] == 0) &amp;&amp; ([MILLISECOND] &lt; 175) ? (209 * (1 - ([MILLISECOND] / 175.0))) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Minute ones beam - animates every minute -->
    <Group x="326" y="0" width="73" height="209" name="minute_ones_beam">
      <PartDraw x="0" y="0" width="73" height="209">
        <Rectangle x="0" y="0" width="73">
          <Fill color="#f5df1d"/>
          <!-- Minute ones changes every minute - Four phase animation -->
          <Transform target="height" value="([SECOND] == 59) ? (([MILLISECOND] &lt; 475) ? 0 : ([MILLISECOND] &lt; 650) ? ((([MILLISECOND] - 475) / 175.0) * 209) : ([MILLISECOND] &lt; 825) ? (209 * (1 - (([MILLISECOND] - 650) / 175.0))) : ([MILLISECOND] &lt; 1000) ? ((([MILLISECOND] - 825) / 175.0) * 209) : 209) : ([SECOND] == 0) ? (([MILLISECOND] &lt; 175) ? (209 * (1 - ([MILLISECOND] / 175.0))) : 0) : 0" />
        </Rectangle>
      </PartDraw>
    </Group>
    
    <!-- Battery indicator to left of day text -->
    <Group x="30" y="214" width="140" height="50" name="battery_group">
      <PartText x="0" y="0" width="140" height="50">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="RIGHT">
          <Font family="@font/imagine_font" size="45" color="#ffffff">
            <Template>%03d%%<Parameter expression="[BATTERY_PERCENT]"/></Template>
          </Font>
        </Text>
      </PartText>
    </Group>
    
    <!-- Day text moved right and up with smaller font -->
    <Group x="0" y="0" width="450" height="450" name="day_of_week_and_month">
      <PartText x="243" y="214" width="240" height="50">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="LEFT">
          <Font family="@font/imagine_font" size="45" color="#ffffff">
            <Template>%s %02d<Parameter expression="[DAY_OF_WEEK_S]"></Parameter><Parameter expression="[DAY]"></Parameter></Template>
          </Font>
        </Text>
      </PartText>
    </Group>
    
    <!-- Heart rate complication -->
    <Group x="0" y="285" width="450" height="55" name="heart_rate_group">
      <PartText x="25" y="-3" width="450" height="55">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="CENTER">
          <Font family="@font/imagine_font" size="45" color="#f5df1d">
            <Template>%03d BPM<Parameter expression="[HEART_RATE]"/></Template>
          </Font>
        </Text>
      </PartText>
      <PartText x="85" y="4" width="40" height="40">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="CENTER">
          <Font family="@font/imagine_font" size="35" color="#f5df1d">
            <Template>♥</Template>
          </Font>
        </Text>
      </PartText>
    </Group>
    
    <!-- Step count complication -->
    <Group x="0" y="335" width="450" height="50" name="step_count_group">
      <PartText x="28" y="-3" width="450" height="50">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="CENTER">
          <Font family="@font/imagine_font" size="45" color="#ffffff">
            <Template>%05d<Parameter expression="[STEP_COUNT]"/></Template>
          </Font>
        </Text>
      </PartText>
      <PartText x="115" y="-1" width="40" height="40">
        <Variant mode="AMBIENT" target="alpha" value="0"/>
        <Text align="CENTER">
          <Font family="@font/imagine_font" size="35" color="#ffffff">
            <Template>👟</Template>
          </Font>
        </Text>
      </PartText>
    </Group>
    <!-- Progress bar for seconds - moved under day text -->
    <Group x="0" y="266" width="450" height="8" name="progress_bar_group">
      <PartDraw x="0" y="0" width="450" height="8">
        <Rectangle x="0" y="0" height="8">
          <Fill color="#f5df1d" />
          <Transform target="width" value="([SECOND] &lt; 59) ? ([SECOND] * 7.5) : ([MILLISECOND] &lt; 650) ? 450 : (450 * (1 - (([MILLISECOND] - 650) / 350.0)))" />
        </Rectangle>
      </PartDraw>
      <Variant mode="AMBIENT" target="alpha" value="0"/>
    </Group>
  </Scene>
</WatchFace>